<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlcoolGasolina.Views.Combustivel.HistoricoPage"
             Title="Histórico">
    <ContentPage.Content>
        <ListView
            x:Name="listHistorico"
            CachingStrategy="RecycleElement" 
            ItemsSource="{Binding ListHistorico, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Valor, StringFormat='VALOR: R$ {0}'}" 
                              Detail="{Binding Data, StringFormat='DATA: {0}'}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>            
        </ListView>
    </ContentPage.Content>
</ContentPage>